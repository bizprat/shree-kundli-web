---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Shree Kundli: Vedic Astrology & Panchang">
  <div class="text-center py-12 space-y-8 animate-[fade-in_0.5s_ease-out]">
    
    <!-- Hero Section -->
    <div class="space-y-4">
      <h1 class="text-5xl md:text-7xl font-heading font-bold text-primary tracking-tight">
        Shree Kundli
      </h1>
      <p class="text-xl md:text-2xl text-neutral/80 font-body max-w-2xl mx-auto leading-relaxed">
        Ancient Vedic Wisdom for the <span class="text-secondary font-medium">Modern Era</span>.
      </p>
    </div>

    <!-- Quick Actions Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12 max-w-5xl mx-auto">
      
      <!-- Card 1 -->
      <div class="card bg-base-100/80 backdrop-blur border border-secondary/20 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300 p-6 text-left group">
        <div class="flex items-center justify-between mb-4">
          <h2 class="font-heading text-2xl text-primary group-hover:text-secondary transition-colors">Panchang</h2>
          <span class="text-3xl">ðŸ“…</span>
        </div>
