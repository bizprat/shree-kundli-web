---
/**
 * FeatureCard Component
 *
 * A card component for displaying feature sections on the homepage.
 * Mobile-optimized with 48px minimum touch targets.
 *
 * Usage:
 * <FeatureCard
 *   title="Daily Panchang"
 *   titleHindi="आज का पंचांग"
 *   description="Check tithi, nakshatra, yoga, and karana"
 *   href="/panchang"
 *   icon="calendar"
 * />
 */

interface Props {
  title: string;
  titleHindi?: string;
  description: string;
  descriptionHindi?: string;
  href: string;
  icon?: 'calendar' | 'star' | 'clock' | 'sun' | 'moon' | 'home' | 'heart';
  variant?: 'default' | 'primary' | 'secondary';
  class?: string;
}

const {
  title,
  titleHindi,
  description,
  descriptionHindi,
  href,
  icon = 'star',
  variant = 'default',
  class: className = '',
} = Astro.props;

// Icon paths
const iconPaths: Record<string, string> = {
  calendar: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z',
  star: 'M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z',
  clock: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
  sun: 'M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z',
  moon: 'M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z',
  home: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6',
  heart: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z',
};

const variantClasses = {
  default: 'bg-base-100 hover:shadow-md',
  primary: 'bg-primary/5 border-primary/20 hover:bg-primary/10',
  secondary: 'bg-secondary/5 border-secondary/20 hover:bg-secondary/10',
};
---

<a
  href={href}
  class:list={[
    'card border border-base-200 transition-all duration-200 active:scale-[0.98]',
    variantClasses[variant],
    className,
  ]}
>
  <div class="card-body p-4 flex-row items-center gap-4">
    <!-- Icon -->
    <div class:list={[
      'flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center',
      variant === 'primary' ? 'bg-primary text-primary-content' :
      variant === 'secondary' ? 'bg-secondary text-secondary-content' :
      'bg-base-200 text-primary',
    ]}>
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d={iconPaths[icon]}
        />
      </svg>
    </div>

    <!-- Content -->
    <div class="flex-grow min-w-0">
      <h3 class="font-heading text-lg font-semibold text-primary truncate">
        {title}
        {titleHindi && (
          <span class="text-neutral/60 text-sm font-normal ml-1">
            ({titleHindi})
          </span>
        )}
      </h3>
      <p class="text-sm text-neutral/70 line-clamp-2">
        {description}
      </p>
    </div>

    <!-- Arrow -->
    <div class="flex-shrink-0">
      <svg
        class="w-5 h-5 text-neutral/40"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 5l7 7-7 7"
        />
      </svg>
    </div>
  </div>
</a>
